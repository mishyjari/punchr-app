extends layout
block content
  h3 New User
  div.new_user_form
    form(method='POST' action='')
      div.form-group
        label(for='first_name') First Name: 
        input#first_name.form-control(type='text' name='first_name')
        br
        label(for='last_name') Last Name:
        input#last_name.form-control(type='text' name='last_name')
        br
        label(for='phone') Phone Number:
        input#phone.form-control(type='text' name='phone')
        br
        label(for='email') Email:
        input#email.form-control(type='text' name='email')
        br
        label(for='pin') User Pin:
        input#pin.form-control(type='text' name='pin')
        br
        label(for='password') Password:
        input#password.form-control(type='password' name='password')
        br
      button.btn.btn-primary(type='submit') Submit

